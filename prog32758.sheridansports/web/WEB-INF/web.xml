<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.sheridansports.listeners.DBConnectionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ViewProductInfoServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.ViewProductInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductsServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.GetProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCardsServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.GetCardsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.AddToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProductInfoServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.EditProductInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.RemoveFromCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmPurchaseServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.ConfirmPurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseSuccessfulServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.PurchaseSuccessfulServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.sheridansports.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductInfoServlet</servlet-name>
        <url-pattern>/admin/ViewProductInfo.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductsServlet</servlet-name>
        <url-pattern>/GetProducts.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCardsServlet</servlet-name>
        <url-pattern>/admin/GetCards.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/AddToCart.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/admin/AddProduct.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProductInfoServlet</servlet-name>
        <url-pattern>/admin/EditProductInfo.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <url-pattern>/RemoveFromCart.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmPurchaseServlet</servlet-name>
        <url-pattern>/ConfirmPurchase.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseSuccessfulServlet</servlet-name>
        <url-pattern>/PurchaseSuccessful.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/admin/Logout.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <!-- Database configuration -->
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost/</param-value>
    </context-param>
    <context-param>
        <param-name>database</param-name>
        <param-value>sheridansports</param-value>
    </context-param>
    <context-param>
        <param-name>dbusername</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbpassword</param-name>
        <param-value>sheridan</param-value>
    </context-param>
    <!-- Authentication/Authorization via Tomcat -->
    <security-role>
        <description>Admin Users</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Store Managers</description>
        <role-name>Manager</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Administration Section</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>Manager</role-name>
        </auth-constraint>
    </security-constraint>
    <!-- Basic Authentication
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Only admin and managers can access this area</realm-name>
    </login-config> -->
    <!--FORM-Based Authentication -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/admin/login.jsp</form-login-page>
            <form-error-page>/admin/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
